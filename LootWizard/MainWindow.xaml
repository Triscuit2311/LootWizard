<Window x:Class="LootWizard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LootWizard"
        mc:Ignorable="d"
        Title="Loot Wizard" Height="640" Width="720" Icon="resources/icons/wizard-hat.png"
        Background="{DynamicResource BackgroundColor}"
        Foreground="{DynamicResource ForegroundColor}">

    <Window.Resources>
        <Style x:Key="FlatButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource BackgroundColor}" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Opacity" Value="0.8" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{DynamicResource BackgroundColor}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Opacity="{TemplateBinding Opacity}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center">
                                <!-- <ContentPresenter.Effect> -->
                                <!--     <DropShadowEffect x:Name="imgShadowEffect" -->
                                <!--                       Color="Transparent" BlurRadius="0" /> -->
                                <!-- </ContentPresenter.Effect> -->
                            </ContentPresenter>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="1" />
                                <!-- Add other setters for mouse over effects here -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <TabControl TabStripPlacement="Left" Background="{DynamicResource BackgroundColor}" Foreground="{DynamicResource ForegroundColor}">
            <!-- TabControl Style -->
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Grid>
                                    <Border x:Name="TabItemBorder" Background="{DynamicResource BackgroundColor}" Margin="0,5,0,5">
                                        <ContentPresenter x:Name="ContentSite"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"
                                                          ContentSource="Header"
                                                          Margin="12,2" />
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="TabItemBorder" Property="Background" Value="Firebrick" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="TabItemBorder" Property="Background" Value="DarkGreen" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>


            <!-- Items Tab -->
            <TabItem Header="Items" Background="{DynamicResource BackgroundColor}" Foreground="{DynamicResource ForegroundColor}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" /> <!-- For Search Area -->
                        <RowDefinition Height="*" />   <!-- For Items List -->
                    </Grid.RowDefinitions>

                    <!-- Search Bar at the top -->
                    <Grid Grid.Row="0" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Grid.Row="0" x:Name="ItemsSearchBoxLabel" Content="Search: "
                                   VerticalAlignment="Center" Background="{DynamicResource BackgroundColor}" Foreground="{DynamicResource ForegroundColor}"/>
                            <TextBox Grid.Column="1" Grid.Row="0" x:Name="ItemsSearchBox" HorizontalAlignment="Stretch"
                                     VerticalAlignment="Center"
                                     Margin="10,10,10,0"
                                     TextChanged="ItemsSearchBox_TextChanged" 
                                     Background="{DynamicResource BackgroundColor}" Foreground="{DynamicResource ForegroundColor}"/>
                        </Grid>

                        <!-- Filters and Search Button Below -->
                        <Grid Grid.Row="1" Margin="5" VerticalAlignment="Top" HorizontalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />

                            </Grid.ColumnDefinitions>

                            <Grid Margin="5" VerticalAlignment="Top" HorizontalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Price/Price-per-slot Filter -->
                                <TextBox Grid.Column="0" x:Name="PriceFilterBox" Grid.Row="0" Margin="5,5,5,0"
                                         TextChanged="ApplyFilters" 
                                         Background="{DynamicResource BackgroundColor}" Foreground="{DynamicResource ForegroundColor}"/>
                                <ComboBox Grid.Column="0" x:Name="PriceFilterType" Grid.Row="1" Margin="5,5,5,0"
                                          SelectionChanged="ApplyFilters"
                                          >
                                    <ComboBoxItem Content="Filter by Price" />
                                    <ComboBoxItem Content="Filter by Price/Slot" />
                                </ComboBox>

                                <!-- Checkboxes for Favorites and Selected -->
                                <CheckBox Grid.Column="1" x:Name="FavoritesFilterCheckBox"
                                          Content="Filter by Favorites"
                                          Grid.Row="0"
                                          Margin="5,5,5,0" Click="ApplyFilters" 
                                          Background="{DynamicResource BackgroundColor}" Foreground="{DynamicResource ForegroundColor}"/>
                                <CheckBox Grid.Column="1" x:Name="SelectedFilterCheckBox" Content="Filter by Selected"
                                          Grid.Row="1"
                                          Margin="5,5,5,0" Click="ApplyFilters" 
                                          Background="{DynamicResource BackgroundColor}" Foreground="{DynamicResource ForegroundColor}"/>
                            </Grid>

                        </Grid>
                    </Grid>

                    <!-- List of Items -->
                    <ListView Grid.Row="1" x:Name="ItemsList" Margin="10,5,10,10" 
                              HorizontalContentAlignment="Stretch" 
                              Background="{DynamicResource BackgroundColor}" 
                              Foreground="{DynamicResource ForegroundColor}"
                              >
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate DataType="{x:Type local:DisplayItem}">
                                <Grid Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" /> <!-- For Image -->
                                        <ColumnDefinition Width="*" />   <!-- For Name and Price -->
                                        <ColumnDefinition Width="Auto" /> <!-- For Favorite Toggle Button -->
                                        <ColumnDefinition Width="Auto" /> <!-- For CheckBox -->
                                    </Grid.ColumnDefinitions>

                                    <!-- Image -->
                                    <Image Grid.Column="0"
                                           Source="{Binding img_res}" Width="50" Height="50"
                                           Stretch="Uniform"
                                           ImageFailed="Image_OnFailed" RenderOptions.BitmapScalingMode="HighQuality" />

                                    <!-- Name and Price in a Vertical StackPanel -->
                                    <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10,0,0,0">
                                        <TextBlock Text="{Binding display_name}" />
                                        <TextBlock Text="{Binding display_price}" />
                                        <TextBlock Text="{Binding display_price_slot}" />
                                    </StackPanel>

                                    <!-- Favorite Toggle Button -->
                                    <ToggleButton Grid.Column="2" IsChecked="{Binding itemData.favorite}"
                                                  Margin="10,0,0,0" Width="24" Height="24" BorderThickness="0">
                                        <ToggleButton.Style>
                                            <Style TargetType="ToggleButton">
                                                <Setter Property="Background" Value="Transparent" />
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ToggleButton">
                                                            <Image x:Name="imgFavorite"
                                                                   Source="resources/icons/star_inactive.png"
                                                                   RenderOptions.BitmapScalingMode="HighQuality">
                                                                <!-- <Image.Effect> -->
                                                                <!--     <DropShadowEffect x:Name="imgShadowEffect" Color="Transparent" BlurRadius="0" /> -->
                                                                <!-- </Image.Effect> -->
                                                            </Image>
                                                            <ControlTemplate.Triggers>
                                                                <DataTrigger Binding="{Binding itemData.favorite}"
                                                                             Value="True">
                                                                    <Setter TargetName="imgFavorite" Property="Source"
                                                                            Value="resources/icons/star_active.png" />
                                                                </DataTrigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ToggleButton.Style>
                                    </ToggleButton>

                                    <!-- Checkbox -->
                                    <ToggleButton Grid.Column="3" IsChecked="{Binding itemData.selected}"
                                                  Margin="10,0,0,0" Width="24" Height="24" BorderThickness="0"
                                                  Checked="ToggleButton_OnChecked" Unchecked="ToggleButton_OnUnchecked">
                                        <ToggleButton.Style>
                                            <Style TargetType="ToggleButton">
                                                <Setter Property="Background" Value="Transparent" />
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ToggleButton">
                                                            <Image x:Name="imgChecked"
                                                                   Source="resources/icons/check_active.png"
                                                                   RenderOptions.BitmapScalingMode="HighQuality">
                                                                <!-- <Image.Effect> -->
                                                                <!--     <DropShadowEffect x:Name="imgShadowEffect" -->
                                                                <!--         Color="Transparent" BlurRadius="0" /> -->
                                                                <!-- </Image.Effect> -->
                                                            </Image>
                                                            <ControlTemplate.Triggers>
                                                                <DataTrigger Binding="{Binding itemData.selected}"
                                                                             Value="True">
                                                                    <Setter TargetName="imgChecked" Property="Source"
                                                                            Value="resources/icons/check_inactive.png" />
                                                                </DataTrigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ToggleButton.Style>
                                    </ToggleButton>


                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                </Grid>
            </TabItem>


            <!-- Quests Tab -->
            <TabItem Header="Quests" Background="{DynamicResource BackgroundColor}" Foreground="{DynamicResource ForegroundColor}">

                <!-- Content for Quests Tab -->
                <Grid>
                    <TabControl HorizontalAlignment="Stretch" Margin="10">
                        <TabControl.Template>
                            <ControlTemplate TargetType="TabControl">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <TabPanel Grid.Row="0" HorizontalAlignment="Center" IsItemsHost="True" />
                                    <ContentPresenter Grid.Row="1" ContentSource="SelectedContent" />
                                </Grid>
                            </ControlTemplate>
                        </TabControl.Template>


                        <TabItem>
                            <TabItem.Header>
                                <Image Source="resources/eft/traders/Prapor.png" Width="36" Height="36"></Image>
                            </TabItem.Header>
                            <ListView Grid.Row="1" x:Name="QuestsListPrapor" Margin="10,5,10,10"
                                      HorizontalContentAlignment="Stretch"
                                      Background="{DynamicResource BackgroundColor}" Foreground="{DynamicResource ForegroundColor}">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate >
                                    <DataTemplate DataType="{x:Type local:DisplayQuest}" >
                                        <Grid Margin="5">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="15" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="15" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10,0,0,0" >
                                                <TextBlock FontWeight="Bold" Text="{Binding questName}" />
                                            </StackPanel>


                                            <ListView Grid.Column="1" Grid.Row="1" ItemsSource="{Binding RequiredItems}"
                                                      HorizontalContentAlignment="Stretch"
                                                      Background="{DynamicResource BackgroundColor}" Foreground="{DynamicResource ForegroundColor}">
                                                <ListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid HorizontalAlignment="Stretch">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" /> <!-- For Image -->
                                                                <ColumnDefinition Width="Auto" /> <!-- For Text -->
                                                                <ColumnDefinition Width="*" />
                                                                <!-- For Counter and Checkbox -->
                                                            </Grid.ColumnDefinitions>

                                                            <Image Grid.Column="0" Source="{Binding ImageResource}"
                                                                   Width="36" Height="36" />

                                                            <StackPanel Grid.Column="1" Orientation="Vertical"
                                                                        Margin="5">
                                                                <TextBlock Text="{Binding Name}" />
                                                                <TextBlock Text="{Binding QuantityNeededStr}" />
                                                            </StackPanel>

                                                            <!-- Right Side Grid for Counter and Checkbox -->
                                                            <Grid Grid.Column="2">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" /> <!-- For Counter -->
                                                                    <ColumnDefinition Width="Auto" />
                                                                    <!-- For Checkbox -->
                                                                </Grid.ColumnDefinitions>

                                                                <!-- Counter -->
                                                                <StackPanel HorizontalAlignment="Right" Grid.Column="0"
                                                                            Orientation="Horizontal" Margin="5">
                                                                    <Button x:Name="QuestItemDec"
                                                                            Style="{StaticResource FlatButtonStyle}"
                                                                            Width="25" Height="25"
                                                                            Click="QuestItemDec_OnClick">
                                                                        <Image Source="resources/icons/down-arrow.png"
                                                                               RenderOptions.BitmapScalingMode="HighQuality" />
                                                                    </Button>
                                                                    <TextBlock Margin="10,5"
                                                                               Text="{Binding QuantityFound}" />
                                                                    <Button x:Name="QuestItemInc"
                                                                            Style="{StaticResource FlatButtonStyle}"
                                                                            Width="25" Height="25"
                                                                            Click="QuestItemInc_OnClick">
                                                                        <Image
                                                                            Source="resources/icons/upward-arrow.png"
                                                                            RenderOptions.BitmapScalingMode="HighQuality" />
                                                                    </Button>
                                                                </StackPanel>

                                                                <!-- Checkbox -->
                                                                <ToggleButton HorizontalAlignment="Right"
                                                                              Grid.Column="1"
                                                                              IsChecked="{Binding Selected}"
                                                                              Margin="10,0,0,0" Width="24" Height="24"
                                                                              BorderThickness="0"
                                                                              Checked="QuestItemToggle_OnChecked"
                                                                              Unchecked="QuestItemToggle_OnUnchecked">
                                                                    <ToggleButton.Style>
                                                                        <Style TargetType="ToggleButton">
                                                                            <Setter Property="Background"
                                                                                Value="Transparent" />
                                                                            <Setter Property="Template">
                                                                                <Setter.Value>
                                                                                    <ControlTemplate
                                                                                        TargetType="ToggleButton">
                                                                                        <Image x:Name="imgChecked"
                                                                                            Source="resources/icons/check_active.png"
                                                                                            RenderOptions.BitmapScalingMode="HighQuality">
                                                                                            <!-- <Image.Effect> -->
                                                                                            <!--     <DropShadowEffect -->
                                                                                            <!--         x:Name="imgShadowEffect" -->
                                                                                            <!--         Color="Transparent" -->
                                                                                            <!--         BlurRadius="0" /> -->
                                                                                            <!-- </Image.Effect> -->
                                                                                        </Image>
                                                                                        <ControlTemplate.Triggers>
                                                                                            <DataTrigger
                                                                                                Binding="{Binding Selected}"
                                                                                                Value="True">
                                                                                                <Setter
                                                                                                    TargetName="imgChecked"
                                                                                                    Property="Source"
                                                                                                    Value="resources/icons/check_inactive.png" />
                                                                                            </DataTrigger>
                                                                                        </ControlTemplate.Triggers>
                                                                                    </ControlTemplate>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </Style>
                                                                    </ToggleButton.Style>
                                                                </ToggleButton>
                                                            </Grid>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>

                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </TabItem>


                        <TabItem>
                            <TabItem.Header>
                                <Image Source="resources/eft/traders/Therapist.png" Width="36" Height="36"></Image>
                            </TabItem.Header>
                            <ListView Grid.Row="1" x:Name="QuestsListTherapist" Margin="10,5,10,10"
                                      HorizontalContentAlignment="Stretch" Background="{DynamicResource BackgroundColor}" Foreground="{DynamicResource ForegroundColor}">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate DataType="{x:Type local:DisplayQuest}">
                                        <Grid Margin="5">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="15" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="15" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10,0,0,0">
                                                <TextBlock FontWeight="Bold" Text="{Binding questName}" />
                                            </StackPanel>


                                            <ListView Grid.Column="1" Grid.Row="1" ItemsSource="{Binding RequiredItems}"
                                                      HorizontalContentAlignment="Stretch"
                                                      Background="{DynamicResource BackgroundColor}" Foreground="{DynamicResource ForegroundColor}">
                                                <ListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid HorizontalAlignment="Stretch">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" /> <!-- For Image -->
                                                                <ColumnDefinition Width="Auto" /> <!-- For Text -->
                                                                <ColumnDefinition Width="*" />
                                                                <!-- For Counter and Checkbox -->
                                                            </Grid.ColumnDefinitions>

                                                            <Image Grid.Column="0" Source="{Binding ImageResource}"
                                                                   Width="36" Height="36" />

                                                            <StackPanel Grid.Column="1" Orientation="Vertical"
                                                                        Margin="5">
                                                                <TextBlock Text="{Binding Name}" />
                                                                <TextBlock Text="{Binding QuantityNeededStr}" />
                                                            </StackPanel>

                                                            <!-- Right Side Grid for Counter and Checkbox -->
                                                            <Grid Grid.Column="2">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" /> <!-- For Counter -->
                                                                    <ColumnDefinition Width="Auto" />
                                                                    <!-- For Checkbox -->
                                                                </Grid.ColumnDefinitions>

                                                                <!-- Counter -->
                                                                <StackPanel HorizontalAlignment="Right" Grid.Column="0"
                                                                            Orientation="Horizontal" Margin="5">
                                                                    <Button x:Name="QuestItemDec"
                                                                            Style="{StaticResource FlatButtonStyle}"
                                                                            Width="25" Height="25"
                                                                            Click="QuestItemDec_OnClick">
                                                                        <Image Source="resources/icons/down-arrow.png"
                                                                               RenderOptions.BitmapScalingMode="HighQuality" />
                                                                    </Button>
                                                                    <TextBlock Margin="10,5"
                                                                               Text="{Binding QuantityFound}" />
                                                                    <Button x:Name="QuestItemInc"
                                                                            Style="{StaticResource FlatButtonStyle}"
                                                                            Width="25" Height="25"
                                                                            Click="QuestItemInc_OnClick">
                                                                        <Image
                                                                            Source="resources/icons/upward-arrow.png"
                                                                            RenderOptions.BitmapScalingMode="HighQuality" />
                                                                    </Button>
                                                                </StackPanel>

                                                                <!-- Checkbox -->
                                                                <ToggleButton HorizontalAlignment="Right"
                                                                              Grid.Column="1"
                                                                              IsChecked="{Binding Selected}"
                                                                              Margin="10,0,0,0" Width="24" Height="24"
                                                                              BorderThickness="0"
                                                                              Checked="QuestItemToggle_OnChecked"
                                                                              Unchecked="QuestItemToggle_OnUnchecked">
                                                                    <ToggleButton.Style>
                                                                        <Style TargetType="ToggleButton">
                                                                            <Setter Property="Background"
                                                                                Value="Transparent" />
                                                                            <Setter Property="Template">
                                                                                <Setter.Value>
                                                                                    <ControlTemplate
                                                                                        TargetType="ToggleButton">
                                                                                        <Image x:Name="imgChecked"
                                                                                            Source="resources/icons/check_active.png"
                                                                                            RenderOptions.BitmapScalingMode="HighQuality">
                                                                                            <!-- <Image.Effect> -->
                                                                                            <!--     <DropShadowEffect -->
                                                                                            <!--         x:Name="imgShadowEffect" -->
                                                                                            <!--         Color="Transparent" -->
                                                                                            <!--         BlurRadius="0" /> -->
                                                                                            <!-- </Image.Effect> -->
                                                                                        </Image>
                                                                                        <ControlTemplate.Triggers>
                                                                                            <DataTrigger
                                                                                                Binding="{Binding Selected}"
                                                                                                Value="True">
                                                                                                <Setter
                                                                                                    TargetName="imgChecked"
                                                                                                    Property="Source"
                                                                                                    Value="resources/icons/check_inactive.png" />
                                                                                            </DataTrigger>
                                                                                        </ControlTemplate.Triggers>
                                                                                    </ControlTemplate>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </Style>
                                                                    </ToggleButton.Style>
                                                                </ToggleButton>
                                                            </Grid>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>

                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </TabItem>

                        <TabItem>
                            <TabItem.Header>
                                <Image Source="resources/eft/traders/Skier.png" Width="36" Height="36"></Image>
                            </TabItem.Header>
                            <ListView Grid.Row="1" x:Name="QuestsListSkier" Margin="10,5,10,10"
                                      HorizontalContentAlignment="Stretch" Background="{DynamicResource BackgroundColor}" Foreground="{DynamicResource ForegroundColor}">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate DataType="{x:Type local:DisplayQuest}">
                                        <Grid Margin="5">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="15" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="15" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10,0,0,0">
                                                <TextBlock FontWeight="Bold" Text="{Binding questName}" />
                                            </StackPanel>


                                            <ListView Grid.Column="1" Grid.Row="1" ItemsSource="{Binding RequiredItems}"
                                                      HorizontalContentAlignment="Stretch"
                                                      Background="{DynamicResource BackgroundColor}" Foreground="{DynamicResource ForegroundColor}">
                                                <ListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid HorizontalAlignment="Stretch">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" /> <!-- For Image -->
                                                                <ColumnDefinition Width="Auto" /> <!-- For Text -->
                                                                <ColumnDefinition Width="*" />
                                                                <!-- For Counter and Checkbox -->
                                                            </Grid.ColumnDefinitions>

                                                            <Image Grid.Column="0" Source="{Binding ImageResource}"
                                                                   Width="36" Height="36" />

                                                            <StackPanel Grid.Column="1" Orientation="Vertical"
                                                                        Margin="5">
                                                                <TextBlock Text="{Binding Name}" />
                                                                <TextBlock Text="{Binding QuantityNeededStr}" />
                                                            </StackPanel>

                                                            <!-- Right Side Grid for Counter and Checkbox -->
                                                            <Grid Grid.Column="2">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" /> <!-- For Counter -->
                                                                    <ColumnDefinition Width="Auto" />
                                                                    <!-- For Checkbox -->
                                                                </Grid.ColumnDefinitions>

                                                                <!-- Counter -->
                                                                <StackPanel HorizontalAlignment="Right" Grid.Column="0"
                                                                            Orientation="Horizontal" Margin="5">
                                                                    <Button x:Name="QuestItemDec"
                                                                            Style="{StaticResource FlatButtonStyle}"
                                                                            Width="25" Height="25"
                                                                            Click="QuestItemDec_OnClick">
                                                                        <Image Source="resources/icons/down-arrow.png"
                                                                               RenderOptions.BitmapScalingMode="HighQuality" />
                                                                    </Button>
                                                                    <TextBlock Margin="10,5"
                                                                               Text="{Binding QuantityFound}" />
                                                                    <Button x:Name="QuestItemInc"
                                                                            Style="{StaticResource FlatButtonStyle}"
                                                                            Width="25" Height="25"
                                                                            Click="QuestItemInc_OnClick">
                                                                        <Image
